{
    "push": {
        "name": "michaelmitchell/ubuntu-14.04",
        "exclude": [
            ".git",
            "builds",
            "isos",
            "packer_cache"
        ]
    },
    "variables": {
        "version": "0.0",
        "build": "{{env `ATLAS_BUILD_CONFIGURATION_VERSION`}}",
        "atlas_username": "{{env `ATLAS_BUILD_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_BUILD_NAME`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/setup.sh"
        },
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/ansible.sh"
        },
        {
            "type": "shell",
            "inline": [
                "mkdir /tmp/packer-provisioner-ansible-local"
            ]
        },
        {
            "type": "file",
            "source": "./ansible/",
            "destination": "/tmp/packer-provisioner-ansible-local"
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible/main.yml"
        },
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/cleanup.sh"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz",
                " auto=true",
                " priority=critical",
                " initrd=/install/initrd.gz",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                " -- ",
                "<enter>"
            ],
            "boot_wait": "10s",
            "disk_size": 81920,
            "guest_os_type": "Ubuntu_64",
            "headless": true,
            "http_directory": "http",
            "iso_urls": [
                "isos/ubuntu-14.04.3-server-amd64.iso",
                "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso"
            ],
            "iso_checksum_type": "md5",
            "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version"
        },
        {
            "type": "vmware-iso",
            "boot_command": [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz",
                " auto=true",
                " priority=critical",
                " initrd=/install/initrd.gz",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                " -- ",
                "<enter>"
            ],
            "boot_wait": "10s",
            "disk_size": 81920,
            "guest_os_type": "Ubuntu-64",
            "headless": true,
            "http_directory": "http",
            "iso_urls": [
                "isos/ubuntu-14.04.3-server-amd64.iso",
                "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso"
            ],
            "iso_checksum_type": "md5",
            "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_username": "vagrant",
            "ssh_wait_timeout": "10000s",
            "tools_upload_flavor": "linux"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
			"output": "boxes/{{user `atlas_name`}}_{{.Provider}}.box"
        },
        {
            "type": "atlas",
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "only": [
                "vmware-iso"
            ],
            "metadata": {
                "provider": "vmware_desktop",
                "version": "{{user `version`}}.{{user `build`}}"
            }
        },
        {
            "type": "atlas",
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "only": [
                "virtualbox-iso"
            ],
            "metadata": {
                "provider": "virtualbox",
                "version": "{{user `version`}}.{{user `build`}}"
            }
        }
    ]
}
